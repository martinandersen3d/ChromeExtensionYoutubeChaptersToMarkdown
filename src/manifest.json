{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "YouTube Chapter Copy",
    "description": "Copy chapters from YouTube videos",
    "version": "0.0.1",
    "icons": {
        "16": "logo/icon16.png",
        "48": "logo/icon48.png",
        "128": "logo/icon128.png"
    },
    "options_page": "settings/settings.html",
    
    "permissions": ["scripting", "activeTab", "tabs", "clipboardWrite"],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["contentScript.js"],
        "matches": ["*://www.youtube.com/*", "*://m.youtube.com/*", "https://*.youtube.com/*"]
    }]
}
